<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>sign</display-name>
  <welcome-file-list>
    <welcome-file>/index.html</welcome-file>
  </welcome-file-list>
  <context-param>
    <param-name>index_url</param-name>
    <param-value>/index.html</param-value>
  </context-param>
  <servlet>
    <servlet-name>dispatcherServlet</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <init-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>classpath:springmvc.xml</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>dispatcherServlet</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
  
  <!-- Spring应用下的上下文，理解层次化的ApplicationContext -->
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>
			classpath:applicationContext.xml
	</param-value>
  </context-param>
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
  
  
  
  <filter>
    <filter-name>characterEncodingFilter</filter-name>
    <filter-class>com.es.filter.SetCharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>characterEncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>hiddenHttpMethodFilter</filter-name>
    <filter-class>org.springframework.web.filter.HiddenHttpMethodFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>hiddenHttpMethodFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  
  
  
  <filter>
    <filter-name>userFilter</filter-name>
    <filter-class>com.es.filter.UserFilter</filter-class>
    <init-param>
      <param-name>error_url</param-name>
      <param-value>/index.html</param-value>
    </init-param>
    <init-param>
      <param-name>init_config</param-name>
      <param-value>/;/index.html;/index3.html;/upload.html;/school;/class;/major;/logout;/academy;/course;/search;/session;/lesson;/download;/stusign;/order;/user;/login;.*.WD3;.*.js;.*.css;.*.png;.*.woff;.*.ttf;.*.svg;.*.gif;.*.eot;.*.eot@;.*.jpg;</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>userFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  
  
  <session-config>
    <session-timeout>10</session-timeout>
  </session-config>
  
  
  <servlet>
    <servlet-name>loginAction</servlet-name>
    <servlet-class>com.es.proxy.DelegatingServletProxy</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>loginAction</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>logoutAction</servlet-name>
    <servlet-class>com.es.proxy.DelegatingServletProxy</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>logoutAction</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>schoolAction</servlet-name>
    <servlet-class>com.es.proxy.DelegatingServletProxy</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>schoolAction</servlet-name>
    <url-pattern>/school</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>academyAction</servlet-name>
    <servlet-class>com.es.proxy.DelegatingServletProxy</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>academyAction</servlet-name>
    <url-pattern>/academy</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>majorAction</servlet-name>
    <servlet-class>com.es.proxy.DelegatingServletProxy</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>majorAction</servlet-name>
    <url-pattern>/major</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>gradeAction</servlet-name>
    <servlet-class>com.es.proxy.DelegatingServletProxy</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>gradeAction</servlet-name>
    <url-pattern>/grade</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>classAction</servlet-name>
    <servlet-class>com.es.proxy.DelegatingServletProxy</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>classAction</servlet-name>
    <url-pattern>/class</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>courseAction</servlet-name>
    <servlet-class>com.es.proxy.DelegatingServletProxy</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>courseAction</servlet-name>
    <url-pattern>/course</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>lessonAction</servlet-name>
    <servlet-class>com.es.proxy.DelegatingServletProxy</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>lessonAction</servlet-name>
    <url-pattern>/lesson</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>orderAction</servlet-name>
    <servlet-class>com.es.proxy.DelegatingServletProxy</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>orderAction</servlet-name>
    <url-pattern>/order</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>stusignAction</servlet-name>
    <servlet-class>com.es.proxy.DelegatingServletProxy</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>stusignAction</servlet-name>
    <url-pattern>/stusign</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>userAction</servlet-name>
    <servlet-class>com.es.proxy.DelegatingServletProxy</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>userAction</servlet-name>
    <url-pattern>/user</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>searchAction</servlet-name>
    <servlet-class>com.es.proxy.DelegatingServletProxy</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>searchAction</servlet-name>
    <url-pattern>/search</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>sessionAction</servlet-name>
    <servlet-class>com.es.proxy.DelegatingServletProxy</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>sessionAction</servlet-name>
    <url-pattern>/session</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>uploadFileAction</servlet-name>
    <servlet-class>com.es.proxy.DelegatingServletProxy</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>uploadFileAction</servlet-name>
    <url-pattern>/download</url-pattern>
  </servlet-mapping>
</web-app>